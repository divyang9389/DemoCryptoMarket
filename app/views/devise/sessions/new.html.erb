<%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"} do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Sing In</h1>
  <%= f.label :email, "Email Address", class: "float-left"%>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address", required: true %>
  <%= f.label :password, class: "float-left"%>
  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter Password" %>
  <div class="checkbox mb-3">
    <label>
      <%= f.check_box :remember_me %> Remember me
    </label>
  </div>
  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
<% end%>
